generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

// Simplified replies model for our use case
model replies {
  id            String   @id @default(uuid())
  choice        String
  message       String
  created_at    DateTime @default(now())

  @@index([created_at], name: "idx_replies_created_at")
}

model tokens {
  id         String   @id
  used       Boolean  @default(false)
  created_at DateTime @default(now())
  opened_at  DateTime?
  expires_at DateTime?

  @@map("tokens")
}